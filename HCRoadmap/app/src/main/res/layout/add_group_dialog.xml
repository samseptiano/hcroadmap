<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:apps="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@drawable/dialog_bg"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvDialogTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Title"
                android:textColor="#000"
                android:layout_marginBottom="15dp"
                android:textSize="13dp" />

            <LinearLayout
                android:id="@+id/lnPosisiAwal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Direktorat"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <mabbas007.tagsedittext.TagsEditText
                android:id="@+id/tagsDirektorat"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:allowSpaceInTag="true"
                android:textColor="#000"
                android:padding="8dp"
                android:textSize="12dp"
                app:tagsTextColor="#000"
                app:tagsTextSize="12dp"
                android:background="@drawable/btn_modal_grey"
                app:tagsBackground="@drawable/square_default"
                app:tagsCloseImageRight="@drawable/close_btn"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Reviewer"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <mabbas007.tagsedittext.TagsEditText
                android:id="@+id/tagsReviewer"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:allowSpaceInTag="true"
                android:textColor="#000"
                android:padding="8dp"
                android:textSize="12dp"
                app:tagsTextColor="#000"
                app:tagsTextSize="12dp"
                android:background="@drawable/btn_modal_grey"
                app:tagsBackground="@drawable/square_default"
                app:tagsCloseImageRight="@drawable/close_btn"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Moderator"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <mabbas007.tagsedittext.TagsEditText
                android:id="@+id/tagsModerator"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:allowSpaceInTag="true"
                android:textColor="#000"
                android:padding="8dp"
                android:textSize="12dp"
                app:tagsTextColor="#000"
                app:tagsTextSize="12dp"
                android:background="@drawable/btn_modal_grey"
                app:tagsBackground="@drawable/square_default"
                app:tagsCloseImageRight="@drawable/close_btn"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:text="Tanggal Pelaksanaan"
                android:textColor="#000"
                android:textSize="12dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                android:id="@+id/edtTanggalPelaksanaan"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:ems="10"
                    android:maxLength="10"
                    android:textSize="11sp"
                android:padding="5dp"
                android:background="@drawable/btn_modal_grey"
                android:inputType="date"
                android:text="" />
                <EditText
                    android:id="@+id/edtJamPelaksanaan"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:maxLength="5"
                    android:textSize="11sp"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:background="@drawable/btn_modal_grey"
                    android:inputType="text"
                    android:text="" />
                <DatePicker
                    android:id="@+id/datePickerPelaksanaan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:datePickerMode="calendar"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Tanggal Deadline"
                android:textColor="#000"
                android:textSize="12dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <EditText
                android:id="@+id/edtTanggalDeadline"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:ems="10"
                android:maxLength="10"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="11sp"
                android:background="@drawable/btn_modal_grey"
                android:inputType="date"
                android:text="" />
            <EditText
                android:id="@+id/edtJamDeadline"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:ems="10"
                android:maxLength="5"
                android:textSize="11sp"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_modal_grey"
                android:inputType="text"
                android:text="" />
            </LinearLayout>
            <DatePicker
                android:id="@+id/datePickerDeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:datePickerMode="calendar"
                android:visibility="gone" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <Button
                android:id="@+id/btnCancel"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:textSize="12sp"
                android:background="@drawable/shapetextarea"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Cancel" />
            <Button
                android:id="@+id/btnSave"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shapepurple"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="OK" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>