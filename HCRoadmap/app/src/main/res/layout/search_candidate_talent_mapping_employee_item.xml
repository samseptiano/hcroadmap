<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="0dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="5dp"
        android:layout_marginBottom="0dp"
        android:paddingBottom="15dp"
        card_view:cardCornerRadius="5dp"
        android:paddingTop="15dp"
        android:outlineSpotShadowColor="@color/black"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:layout_height="match_parent">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/empPhoto"
                            android:layout_width="match_parent"
                            android:src="@drawable/user"
                            android:layout_margin="5dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvNama"
                            android:layout_width="match_parent"
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content"
                            android:text="Nama" />

                        <TextView
                            android:id="@+id/tvDept"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="HRIS - EPM - Pusat"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvGolongan"
                            android:layout_width="match_parent"
                            android:textSize="10sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:text="3A" />

                        <TextView
                            android:id="@+id/tvUmur"
                            android:layout_width="match_parent"
                            android:textSize="10sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:text="23 Tahun" />

                    </LinearLayout>



                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Special Archievement" />
                <TextView
                    android:id="@+id/tvArchievement"
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore " />
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="15dp"

                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Recommendaration Reason" />
                <TextView
                    android:id="@+id/tvRecommendation"
                    android:layout_width="match_parent"
                    android:textSize="10sp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:text="Recommendation" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tvLihatTalentProfile"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:layout_marginTop="0dp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginBottom="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/blue"
                android:text="Lihat Profile" />
                <Button
                    android:id="@+id/btnInsertToTalentMapping"
                    android:layout_width="75dp"
                    android:textSize="10sp"
                    android:background="@drawable/shapepurple"
                    android:text="Add"
                    android:layout_margin="8dp"
                    android:layout_height="30dp"/>
                    </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>


