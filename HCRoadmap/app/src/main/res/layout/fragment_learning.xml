<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fillViewport="true"
    card_view:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context=".Fragment.TalentMapping.SubTalentProfile.LearningFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvLDP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:outlineSpotShadowColor="@color/black"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            card_view:cardBackgroundColor="@color/colorPrimary"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="LDP"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/expandLDP"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_gravity="right"
                android:layout_margin="8dp"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/expand_up"></androidx.appcompat.widget.AppCompatImageButton>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/lnLDP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- nanti akan di recyclerview-->
<!--            <include layout="@layout/learning_kmmp_item"/>-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLDP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvTrainingInternal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/colorPrimary"
            card_view:cardElevation="5dp"
            android:layout_marginBottom="0dp"
            android:paddingBottom="15dp"
            card_view:cardCornerRadius="5dp"
            android:paddingTop="15dp"
            android:outlineSpotShadowColor="@color/black"
            card_view:cardUseCompatPadding="true"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:text="Training Internal" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/expandTrainingInternal"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:src="@drawable/expand_up">
            </androidx.appcompat.widget.AppCompatImageButton>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/lnTrainingInternal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- nanti akan di recyclerview-->
<!--            <include layout="@layout/learning_training_item"/>-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTrainingInternal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvTrainingExternal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/colorPrimary"
            card_view:cardElevation="5dp"
            android:layout_marginBottom="0dp"
            android:paddingBottom="15dp"
            card_view:cardCornerRadius="5dp"
            android:paddingTop="15dp"
            android:outlineSpotShadowColor="@color/black"
            card_view:cardUseCompatPadding="true"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:text="Training External" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/expandTrainingExternal"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:src="@drawable/expand_up">
            </androidx.appcompat.widget.AppCompatImageButton>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/lnTrainingExternal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- nanti akan di recyclerview-->
<!--            <include layout="@layout/learning_training_item"/>-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTrainingExternal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvKnowledgemanagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/colorPrimary"
            card_view:cardElevation="5dp"
            android:layout_marginBottom="0dp"
            android:paddingBottom="15dp"
            card_view:cardCornerRadius="5dp"
            android:paddingTop="15dp"
            android:outlineSpotShadowColor="@color/black"
            card_view:cardUseCompatPadding="true"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Knowledge Management"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/expandKnowledgeManagement"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:src="@drawable/expand_up">
            </androidx.appcompat.widget.AppCompatImageButton>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/lnKnowledgeManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- nanti akan di recyclerview-->
<!--            <include layout="@layout/learning_training_item"/>-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvKnowledgeManagement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>