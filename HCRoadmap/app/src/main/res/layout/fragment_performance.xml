<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fillViewport="true"
    card_view:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context=".Fragment.TalentMapping.SubTalentProfile.PerformanceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvPA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/colorPrimary"
            card_view:cardElevation="5dp"
            android:layout_marginBottom="0dp"
            android:paddingBottom="15dp"
            card_view:cardCornerRadius="5dp"
            android:paddingTop="15dp"
            android:outlineSpotShadowColor="@color/black"
            card_view:cardUseCompatPadding="true"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:text="Performance Appraisal" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/expandPA"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:src="@drawable/expand_up">
            </androidx.appcompat.widget.AppCompatImageButton>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/lnPA"
            android:background="@drawable/shape_black_border"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- nanti akan di recyclerview-->
<!--            <include layout="@layout/pa_item"/>-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPA"
                android:orientation="horizontal"
                android:scrollbars="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvArchievement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/colorPrimary"
            card_view:cardElevation="5dp"
            android:layout_marginBottom="0dp"
            android:paddingBottom="15dp"
            card_view:cardCornerRadius="5dp"
            android:paddingTop="15dp"
            android:outlineSpotShadowColor="@color/black"
            card_view:cardUseCompatPadding="true"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:text="Archievement" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/expandArchievement"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:src="@drawable/expand_up">
            </androidx.appcompat.widget.AppCompatImageButton>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/lnArchievement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- nanti akan di recyclerview-->
<!--            <include layout="@layout/archievement_item"/>-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvArchievement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvOtherArchievement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/colorPrimary"
            card_view:cardElevation="5dp"
            android:layout_marginBottom="0dp"
            android:paddingBottom="15dp"
            card_view:cardCornerRadius="5dp"
            android:paddingTop="15dp"
            android:outlineSpotShadowColor="@color/black"
            card_view:cardUseCompatPadding="true"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:text="Other Archievement" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/expandOtherArchievement"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:src="@drawable/expand_up">
            </androidx.appcompat.widget.AppCompatImageButton>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/lnOtherArchievement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- nanti akan di recyclerview-->
<!--            <include layout="@layout/other_archievement_item"/>-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOtherArchievement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>