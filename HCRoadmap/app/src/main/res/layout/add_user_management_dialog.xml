<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_custom_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:background="#fff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/lnNamaPIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Nama PIC"
                android:textColor="#000"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>
        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/spinnerNamaPIC"
            app:smsp_hint="Nama PIC"
            app:smsp_isSearchable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            app:smsp_errorText=""
            app:smsp_hintSize="10sp"
            app:smsp_itemSize="10sp"
            app:smsp_enableErrorLabel="false"
            app:smsp_enableFloatingLabel="false"
            app:smsp_floatingLabelColor="@color/colorPrimaryDark"
            app:smsp_floatingLabelText="Floating Label Text"
            app:smsp_hintColor="@color/colorPrimary"
            app:smsp_itemColor="@color/colorPrimary"
            app:smsp_itemListColor="@color/colorPrimary"
            app:smsp_itemListHintBackgroundColor="@color/light_grey"
            app:smsp_itemListHintColor="@color/white"
            app:smsp_multilineError="false"
            app:smsp_searchHeaderBackgroundColor="@color/colorPrimaryDark"
            app:smsp_selectedItemListColor="@color/light_grey"/>

        <LinearLayout
            android:id="@+id/lnDirektoratMapping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Direktorat Mapping"
                android:textColor="#000"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout><mabbas007.tagsedittext.TagsEditText
            android:id="@+id/tagsDirektoratMapping"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            app:allowSpaceInTag="true"
            android:textColor="#000"
            android:padding="8dp"
            android:textSize="12dp"
            app:tagsTextColor="#000"
            app:tagsTextSize="12dp"
            android:background="@drawable/btn_modal_grey"
            app:tagsBackground="@drawable/square_default"
            app:tagsCloseImageRight="@drawable/close_btn"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Role"
                        android:textColor="#000"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/spinnerRole"
                        app:smsp_hint="Role"
                        app:smsp_isSearchable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        app:smsp_errorText=""
                        app:smsp_hintSize="10sp"
                        app:smsp_itemSize="10sp"
                        app:smsp_enableErrorLabel="false"
                        app:smsp_enableFloatingLabel="false"
                        app:smsp_floatingLabelColor="@color/colorPrimaryDark"
                        app:smsp_floatingLabelText="Floating Label Text"
                        app:smsp_hintColor="@color/colorPrimary"
                        app:smsp_itemColor="@color/colorPrimary"
                        app:smsp_itemListColor="@color/colorPrimary"
                        app:smsp_itemListHintBackgroundColor="@color/light_grey"
                        app:smsp_itemListHintColor="@color/white"
                        app:smsp_multilineError="false"
                        app:smsp_searchHeaderBackgroundColor="@color/colorPrimaryDark"
                        app:smsp_selectedItemListColor="@color/light_grey"/>

                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Salary View Access"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />
                <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                    android:id="@+id/spinnerFlagSalary"
                    app:smsp_hint="Salary View Access"
                    app:smsp_isSearchable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    app:smsp_errorText=""
                    app:smsp_hintSize="10sp"
                    app:smsp_itemSize="10sp"
                    app:smsp_enableErrorLabel="false"
                    app:smsp_enableFloatingLabel="false"
                    app:smsp_floatingLabelColor="@color/colorPrimaryDark"
                    app:smsp_floatingLabelText="Floating Label Text"
                    app:smsp_hintColor="@color/colorPrimary"
                    app:smsp_itemColor="@color/colorPrimary"
                    app:smsp_itemListColor="@color/colorPrimary"
                    app:smsp_itemListHintBackgroundColor="@color/light_grey"
                    app:smsp_itemListHintColor="@color/white"
                    app:smsp_multilineError="false"
                    app:smsp_searchHeaderBackgroundColor="@color/colorPrimaryDark"
                    app:smsp_selectedItemListColor="@color/light_grey"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Flag PIC Mapping"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />
                <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                    android:id="@+id/spinnerFlagPICMapping"
                    app:smsp_hint="PIC Mapping"
                    app:smsp_isSearchable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    app:smsp_errorText=""
                    app:smsp_hintSize="10sp"
                    app:smsp_itemSize="10sp"
                    app:smsp_enableErrorLabel="false"
                    app:smsp_enableFloatingLabel="false"
                    app:smsp_floatingLabelColor="@color/colorPrimaryDark"
                    app:smsp_floatingLabelText="Floating Label Text"
                    app:smsp_hintColor="@color/colorPrimary"
                    app:smsp_itemColor="@color/colorPrimary"
                    app:smsp_itemListColor="@color/colorPrimary"
                    app:smsp_itemListHintBackgroundColor="@color/light_grey"
                    app:smsp_itemListHintColor="@color/white"
                    app:smsp_multilineError="false"
                    app:smsp_searchHeaderBackgroundColor="@color/colorPrimaryDark"
                    app:smsp_selectedItemListColor="@color/light_grey"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Flag Upload Struktur"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />
                <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                    android:id="@+id/spinnerFlagUpload"
                    app:smsp_hint="Upload Struktur"
                    app:smsp_isSearchable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    app:smsp_errorText=""
                    app:smsp_hintSize="10sp"
                    app:smsp_itemSize="10sp"
                    app:smsp_enableErrorLabel="false"
                    app:smsp_enableFloatingLabel="false"
                    app:smsp_floatingLabelColor="@color/colorPrimaryDark"
                    app:smsp_floatingLabelText="Floating Label Text"
                    app:smsp_hintColor="@color/colorPrimary"
                    app:smsp_itemColor="@color/colorPrimary"
                    app:smsp_itemListColor="@color/colorPrimary"
                    app:smsp_itemListHintBackgroundColor="@color/light_grey"
                    app:smsp_itemListHintColor="@color/white"
                    app:smsp_multilineError="false"
                    app:smsp_searchHeaderBackgroundColor="@color/colorPrimaryDark"
                    app:smsp_selectedItemListColor="@color/light_grey"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:text="Cancel"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_purple_border"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />
            <Button
                android:id="@+id/btnOK"
                android:text="OK"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@drawable/shapepurple"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

