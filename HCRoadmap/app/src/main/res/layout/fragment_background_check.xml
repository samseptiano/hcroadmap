<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    tools:context=".Fragment.TalentMapping.SubTalentProfile.BackgroundCheckFragment">

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Summary Background Check" />
    <TextView
        android:id="@+id/tvCheckDate"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Tanggal: " />
    <TextView
        android:id="@+id/tvSummary"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Summary: " />
    <TextView
        android:id="@+id/tvRecommendation"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="Rekomendasi: " />

    <TextView
        android:id="@+id/tvFilePath"
        android:layout_width="match_parent"
        android:textColor="@color/dark_grey"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:text="file:\\... " />
    <Button
        android:id="@+id/buttonDownload"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/colorPrimary"
        android:background="@color/transparent"
        android:layout_height="40dp"
        android:text="Download Attachment File" />

</LinearLayout>