<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_custom_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:background="#fff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5sp"
            android:text="Special Archievement"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edtArchievement"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/tv"
            android:layout_centerHorizontal="true"
            android:ems="5"
            android:background="@drawable/shapetextarea"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:padding="5sp"
            android:text="Recommendation Reason"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edtRecommendation"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/tv"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:background="@drawable/shapetextarea"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
            android:id="@+id/btnAdd"
            android:text="Tambah"
            android:textColor="#FCFCFC"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:background="@drawable/shapepurple"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:layout_margin="5dp"
            android:shadowDy="0"
            android:shadowRadius="5"
            />
        <Button
            android:id="@+id/btnCancel"
            android:text="Cancel"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_purple_border"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>