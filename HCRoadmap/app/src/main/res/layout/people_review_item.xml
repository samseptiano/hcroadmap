<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="5dp"
        android:layout_marginBottom="0dp"
        android:paddingBottom="15dp"
        card_view:cardCornerRadius="5dp"
        android:paddingTop="15dp"
        android:outlineSpotShadowColor="@color/black"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lnData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvNomor"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    android:text="1. " />
                <TextView
                    android:id="@+id/tvTanggal"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    android:text="23-09-2019" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:gravity="right"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="0dp"
                        android:layout_height="wrap_content"
                        android:text="In Progress" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"
                        android:text="Nama Perusahaan" />
                    <TextView
                        android:id="@+id/tvCompany"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"
                        android:text="Enseval Putera Megatrading TBK." />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:text="Posisi" />
                <TextView
                    android:id="@+id/tvTargetPosisi"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:text="EXTERNAL TRAINING ASSISTANT MANAGER" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_marginLeft="25dp"
                        android:layout_height="wrap_content"
                        android:text="Nama Reviewer" />
                    <TextView
                        android:id="@+id/tvNamaReviewer"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:layout_marginLeft="25dp"
                        android:layout_height="wrap_content"
                        android:text="People Review Sales Manager" />
                </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:text="Direktorat Asal" />
            <TextView
                android:id="@+id/tvDirAsal"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:text="CHB; CHD; PHARMAMED; KND; DIGITAL BUSINESS; DIGITAL BUSINESS;" />
            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnViewDuplicate"
                android:layout_width="match_parent"
                android:padding="15dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnView"
                    android:background="@drawable/shapepurple"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:layout_height="40dp"
                    android:text="View" />
                <Button
                    android:id="@+id/btnDuplicate"
                    android:background="@drawable/shapeyellow"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textSize="10sp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Duplicate" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnViewEditRemove"
                android:layout_width="match_parent"
                android:padding="15dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnView1"
                    android:background="@drawable/shapepurple"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:layout_height="40dp"
                    android:text="View" />
                <Button
                    android:id="@+id/btnEdit1"
                    android:background="@drawable/btn_modal_grey"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textSize="10sp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Edit" />
                <Button
                    android:id="@+id/btnRemove1"
                    android:background="@drawable/button_shape_red"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Remove" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>
